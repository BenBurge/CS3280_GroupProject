<Window x:Class="CS3280_GroupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3280_GroupProject"
        mc:Ignorable="d"
        Title="Invoice System" Height="504.011" Width="643.105" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="459*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="55" Margin="10,10,0,0" VerticalAlignment="Top" Width="613" Grid.ColumnSpan="3">
            <StackPanel x:Name="pnl_GeneralControls" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btn_New" Content="New Invoice" Width="100" Margin="10,10,0,10" HorizontalAlignment="Center" Click="btn_New_Click"/>
                <Button x:Name="btn_Save" Content="Save Invoice" Width="100" Margin="10,10,0,10" HorizontalAlignment="Center" Click="btn_Save_Click"/>
                <Button x:Name="btn_Search" Content="Search for Invoice" Width="100" Margin="10,10,0,10" HorizontalAlignment="Center" Click="btn_Search_Click"/>
                <Button x:Name="btn_EditInventory" Content="Edit Inventory" Width="100" Margin="10,10,0,10" HorizontalAlignment="Center" Click="btn_EditInventory_Click"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="56" Margin="10,102,0,0" VerticalAlignment="Top" Width="613" Grid.ColumnSpan="3">
            <StackPanel x:Name="pnl_InvoiceControls" Margin="0,-1,0,0" Orientation="Horizontal">
                <DatePicker x:Name="btn_Date" Margin="5,10,0,10" Height="25" Text="Date" CalendarClosed="btn_Date_CalendarClosed"/>
                <Label/>
                <Label Content="Item:" Margin="0,15,0,10"/>
                <ComboBox x:Name="cm_Item" Margin="0,10" Width="100" Height="25"/>
                <Button x:Name="btn_Add" Content="Add" Width="75" Margin="5,10,0,10" Height="25" Click="btn_Add_Click"/>
                <Button x:Name="btn_Delete" Content="Delete Invoice" Width="95" Margin="175,15.172,0,15.172" Height="25" Background="#FFE04343" FontWeight="Bold" Click="btn_Delete_Click"/>
            </StackPanel>
        </Border>
        <DataGrid x:Name="grid_Invoice" HorizontalAlignment="Left" Height="301" Margin="10,163,0,0" VerticalAlignment="Top" Width="613" Grid.ColumnSpan="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" Text="Invoice #0000" VerticalAlignment="Top" FontSize="18" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
